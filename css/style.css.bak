body{
	margin: 0;
	box-sizing: border-box;
}



/* Background image */

.banner{
	background: url("../images/pozadina.jpg") no-repeat;
	background-color: white;
    /* Create the parallax scrolling effect */
    background-attachment: fixed;
	height: 30rem;
}

.regbtn{
	font-size: 16px;
	display: inline-block;
	padding: 12px;
	background: lightblue;
	color: #fff;
	border-radius: 5px;
	border: none;
	text-decoration: none;
}

.regbtn:hover{
	background: hsl(210, 100%, 80%);
	color: #fff;
	cursor: pointer;
}

/* Navbar */

.navbar {
  overflow: hidden;
  background-color: lightblue;
  width: 100%;
  height: 3rem;
}

.navbar a {
  float: left;
  font-size: 16px;
  color: white;
  text-align: center;
  width: 100px;
  padding: 14px 40px;
  text-decoration: none;
}

/* Subnav */

.subnav {
  float: left;
  overflow: hidden;
}

.about{
	float: right;
	overflow: hidden;
}

.subnav .subnavbtn {
  font-size: 16px;
  border: none;
  outline: none;
  color: white;
  width: 200px;
  padding: 14px 16px;
  background-color: inherit;
  font-family: inherit;
  margin: 0;
}

.aboutbtn{
	font-size: 16px;
	border: none;
	outline: none;
	color: white;
	width: 200px;
	padding: 14px 16px;
	background-color: inherit;
	font-family: inherit;
	margin: 0;
}

.navbar a:hover, .subnav:hover .subnavbtn{
  background-color: #5cb8d6;
  transition: 0.4s;
}

.aboutbtn:hover{
	background-color: #5cb8d6;
	transition: 0.4s;
}

.subnav-content {
  display: none;
  position: absolute;
  width: 250px;
}

.about-content{
	display: none;
	position: absolute;
	width: 250px;
}

.subnav-content a {
  float: left;
  color: white;
  background-color: lightblue;
  text-decoration: none;
  padding: 10px 25px;
  width: 60.5%;
  transition: 0.4s;
}

.about-content a{
	float: left;
	color: white;
	background-color: lightblue;
	text-decoration: none;
	padding: 10px 25px;
	width: 60.5%;
	transition: 0.4s;
}

.subnav-content a:hover {
  background-color: #5cb8d6;
  color: black;
}

.about-content a:hover{
	background-color: #5cb8d6;
	color: black;
}

.subnav:hover .subnav-content{
  display: block;
}

.about:hover .about-content{
	display: block;
}

.home-content{
	margin: 0 0 4rem;
}

.register{
	float: right;
	margin: 25px 50px 75px;
}

/* Footer */

footer{
	float: right;
	width: 100%;
	text-align: center;
	background: #696662;
	color: #fff;
	padding: 5px;
}

footer a{
	text-decoration: none;
	color: #fff;
}

footer a:hover{
	text-decoration: underline;
}

/* Social icons */

.social-icons a{
	padding: 0 5px;
}

.fa{
	transition: transform .2s;
}

.fa:hover{
    opacity: 0.7;
	
}

.fa-facebook, .fa-facebook-square{
    color: #3b5998;
	transition: transform .2s;
}

.fa-facebook:hover{
	transform: scale(1.5);
}

.fa-twitter, .fa-twitter-square{
    color: #00aced;
	transition: transform .2s;
}

.fa-twitter:hover{
	transform: scale(1.5);
}

.fa-youtube, .fa-youtube-play, .fa-youtube-square{
    color: #bb0000;
	transition: transform .2s;
}

.fa-youtube:hover{
	transform: scale(1.5);
}

.fa-linkedin, .fa-linkedin-square{
    color: #007bb6;
	transition: transform .2s;
}

.fa-linkedin:hover{
	transform: scale(1.5);
}

.fa-instagram{
    color: #517fa4;
	transition: transform .2s;
}

.fa-instagram:hover{
	transform: scale(1.5);
}