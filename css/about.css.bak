body{
	margin: 0;
	padding: 0;
	box-sizing: border-box;
	font-family: 'Ubuntu', sans-serif;	/*Ubuntu, Arial, Helvetica*/
}

.h3{
	padding: 0 2rem;
}

.favicon{
	width: 16px;
	height: 16px;
}

/* Navbar */

.navbar {
  overflow: hidden;
  background-color: lightblue;
  width: 100%;
  height: 3rem;
}

.navbar a {
  float: left;
  font-size: 16px;
  color: white;
  text-align: center;
  width: 100px;
  padding: 14px 40px;
  text-decoration: none;
}

/* Subnav */

.subnav {
  float: left;
  overflow: hidden;
}

.about{
	float: right;
	overflow: hidden;
}

.subnav .subnavbtn {
  font-size: 16px;
  border: none;
  outline: none;
  color: white;
  width: 200px;
  padding: 14px 16px;
  background-color: inherit;
  font-family: inherit;
  margin: 0;
}

.aboutbtn{
	font-size: 16px;
	border: none;
	outline: none;
	color: white;
	width: 200px;
	padding: 14px 16px;
	background-color: inherit;
	font-family: inherit;
	margin: 0;
}

.navbar a:hover, .subnav:hover .subnavbtn{
  background-color: #5cb8d6;
  transition: 0.4s;
}

.aboutbtn:hover{
	background-color: #5cb8d6;
	transition: 0.4s;
}

.subnav-content {
  display: none;
  position: absolute;
  width: 250px;
}

.about-content{
	display: none;
	position: absolute;
	width: 250px;
}

.subnav-content a {
  float: left;
  color: white;
  background-color: lightblue;
  text-decoration: none;
  padding: 10px 25px;
  width: 60.5%;
  transition: 0.4s;
}

.about-content a{
	float: left;
	color: white;
	background-color: lightblue;
	text-decoration: none;
	padding: 10px 25px;
	width: 60.5%;
	transition: 0.4s;
}

.subnav-content a:hover {
  background-color: #5cb8d6;
  color: black;
}

.about-content a:hover{
	background-color: #5cb8d6;
	color: black;
}

.subnav:hover .subnav-content{
  display: block;
}

.about:hover .about-content{
	display: block;
}

.home-content{
	margin: 0 0 4rem;
}
/***********************************************************************/
.openav{
	margin: 10px;
	font-size: 25px;
	cursor: pointer;
}

.openav:hover{
	text-shadow: -.4px -.4px 0 black, .4px .4px black;
}

.sidenav {
  height: 100%;
  width: 0;
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
  background-color: #111;
  overflow-x: hidden;
  transition: 0.5s;
  padding-top: 60px;
}

.sidenav a {
  padding: 8px 8px 8px 32px;
  text-decoration: none;
  font-size: 25px;
  color: #818181;
  display: block;
  transition: 0.3s;
}

.sidenav a:hover {
  color: #f1f1f1;
}

.sidenav .closebtn {
  position: absolute;
  top: 0;
  right: 25px;
  font-size: 36px;
  margin-left: 50px;
}

#main {
  transition: margin-left .5s;
  padding: 16px;
}

@media screen and (max-height: 450px) {
  .sidenav {padding-top: 15px;}
  .sidenav a {font-size: 18px;}
}
/********************************************************************************/
@media screen and(max-width: 600px){
	.navbar{
		float: right;
		display: block;
	}
}

@media screen and(max-width: 600px){
	.navbar{
		position: absolute;
		right: 0;
		top: 0;
	}
	.navbar a{
		float: none;
		display:block;
		text-align: left;
	}
}
/***********************************/

.img-container img{
	max-width: 300px;
	border-radius: 10px;
	margin: 15px 0;
}

/* Footer */

footer{
	float: right;
	width: 100%;
	text-align: center;
	background: #696662;
	color: #fff;
	padding: 5px;
}

footer a{
	text-decoration: none;
	color: #fff;
}

footer a:hover{
	text-decoration: underline;
}

/* Social icons */

.social-icons{
	left: 0;
	bottom: 0;
	margin: 40px 5px;
}

.social-icons a{
	color: #fff;
	padding: 0 5px;
}

.fa{
	transition: transform .2s;
}

.fa:hover{
    opacity: 0.7;
	
}

.fa-facebook, .fa-facebook-square{
    color: #3b5998;
	transition: transform .2s;
}

.fa-facebook:hover{
	transform: scale(1.5);
}

.fa-twitter, .fa-twitter-square{
    color: #00aced;
	transition: transform .2s;
}

.fa-twitter:hover{
	transform: scale(1.5);
}

.fa-youtube, .fa-youtube-play, .fa-youtube-square{
    color: #bb0000;
	transition: transform .2s;
}

.fa-youtube:hover{
	transform: scale(1.5);
}

.fa-linkedin, .fa-linkedin-square{
    color: #007bb6;
	transition: transform .2s;
}

.fa-linkedin:hover{
	transform: scale(1.5);
}

.fa-instagram{
    color: #517fa4;
	transition: transform .2s;
}

.fa-instagram:hover{
	transform: scale(1.5);
}